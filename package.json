{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "changelog": "conventional-changelog -p angular -i ChangeLog.md -s -r 0",
    "lint": "yarn lint:chichi && yarn lint:goku",
    "lint:chichi": "eslint packages/chichi/src --ext .tsx,.ts",
    "lint:goku": "eslint packages/goku/src --ext .tsx,.ts",
    "commit": "git-cz",
    "build": "lerna run --stream --sort build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@commitlint/config-conventional": "^17.0.3",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-webpack5": "^6.5.10",
    "@storybook/manager-webpack5": "^6.5.10",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "autoprefixer": "^10.4.8",
    "commitlint": "^17.0.3",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "css-loader": "^6.7.1",
    "cz-lerna-changelog": "^2.0.3",
    "doctoc": "^2.2.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.4",
    "husky": "^8.0.1",
    "lerna": "^5.4.0",
    "lint-staged": "^13.0.3",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.16",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.2",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "README.md": [
      "doctoc --notitle"
    ]
  },
  "description": "<!-- START doctoc generated TOC please keep comment here to allow auto update --> <!-- DON'T EDIT THIS SECTION, INSTEAD RE-RUN doctoc TO UPDATE -->",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragon-ball-p/dragon-ball.git"
  },
  "bugs": {
    "url": "https://github.com/dragon-ball-p/dragon-ball/issues"
  },
  "homepage": "https://github.com/dragon-ball-p/dragon-ball#readme"
}
